{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "compile": "tsc --noEmit",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./test/jest-spec.config.ts --detectOpenHandles",
    "test:watch": "jest --config ./test/jest-spec.config.ts --watch --detectOpenHandles",
    "test:cov": "jest --config ./test/jest-spec.config.ts --coverage --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.config.ts --detectOpenHandles",
    "orm": "env-cmd ts-node -r tsconfig-paths/register -P tsconfig.json ./node_modules/typeorm/cli.js",
    "migrate:generate": "pnpm orm migration:generate -d ./typeorm.config.ts src/infrastructure/database/migrations/generated",
    "migrate:create": "pnpm orm migration:create src/infrastructure/database/migrations/created",
    "migrate:run": "pnpm orm migration:run -d ./typeorm.config.ts",
    "migrate:show": "pnpm orm migration:show -d ./typeorm.config.ts",
    "migrate:revert": "pnpm orm migration:revert -d ./typeorm.config.ts",
    "schema:drop": "pnpm orm schema:drop -d ./typeorm.config.ts",
    "seed": "env-cmd ts-node -r tsconfig-paths/register -P tsconfig.json ./node_modules/typeorm-extension/bin/cli.mjs seed:run -d ./typeorm.seed.ts",
    "seed:create": "env-cmd ts-node -r tsconfig-paths/register -P tsconfig.json ./node_modules/typeorm-extension/bin/cli.cjs seed:create --name ./src/infrastructure/database/seeds/created.seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "big.js": "^7.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "env-cmd": "^10.1.0",
    "mysql2": "^3.14.2",
    "nano-equal": "^2.0.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.25",
    "typeorm-extension": "^3.7.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.9.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/big.js": "^6.2.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/nano-equal": "^2.0.2",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "axios": "^1.11.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}
